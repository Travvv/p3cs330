@model Fall2025_Project3_jrborth.Models.ActorDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.ImdbLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.ImdbLink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Photo)
        </dt>
        <dd class = "col-sm-10">
            @if (Model?.Actor?.Photo != null && Model.Actor.Photo.Length > 0)
            {
                var base64 = Convert.ToBase64String(Model.Actor.Photo);
                <img src="data:image/jpeg;base64,@base64" style="max-width:400px; max-height:400px;" alt="Photo" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr />

<section>
    <h4>Movies with this actor</h4>
    @if (Model?.Movies != null && Model.Movies.Any())
    {
        <ul>
            @foreach (var m in Model.Movies)
            {
                <li>@m.Title (@m.Year)</li>
            }
        </ul>
    }
    else
    {
        <p>No movies recorded for this actor.</p>
    }
</section>

<section>
    <h3>Overall sentiment for this actor: @Model.AverageSentiment.ToString("F3")</h3>

    <table class="table">
        <thead>
            <tr>
                <th>AI Generated "Tweet"</th>
                <th>Vader Compound Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Tweets != null && Model.Tweets.Any())
            {
                for (int i = 0; i < Model.Tweets.Count; i++)
                {
                    <tr>
                        <td>@Model.Tweets[i]</td>
                        <td>@(i < Model.Sentiments.Count ? Model.Sentiments[i] : "n/a")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="2">No tweets available.</td></tr>
            }
        </tbody>
    </table>
</section>
